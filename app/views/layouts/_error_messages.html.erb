<% if model.errors.any? %>
  <div id="error_explanation" class="alert alert-warning">
    <!--<h2><%= pluralize(model.errors.count, "error") %> prohibited this message from being saved:</h2>-->
    <ul class="mb-0">
      <% model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>