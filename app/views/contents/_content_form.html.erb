<%= form_with(model: content) do |f| %>
  <div class="mb-3 d-flex justify-content-between">
    <%= f.label :category_id, 'カテゴリ: ' %>
    <%= f.select :category_id, category_pulldown_hash, class: 'form-control form-select' %>
  </div>
  <div class="mb-3 d-flex justify-content-between">
    <%= f.label :item_id, '科目: ' %>
    <%= f.select :item_id, item_pulldown_hash(1), class: 'form-control form-select' %>
  </div>
  <div class="mb-3 d-flex justify-content-between">
    <%= f.label :amount, '金額: ' %>
    <%= f.text_field :amount, class: '' %>
  </div>
  <div class="d-flex flex-row-reverse">
    <%= f.submit '登録', class: 'btn btn-primary w-25' %>
  </div>
<% end %>